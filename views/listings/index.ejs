<% layout("/layouts/boilerplate") %>;
<body>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col">
                    <img class="card-img-top" src="<%= listing.image.url %>" alt="listing_image" style=" height: 20rem ">
                    <div class="card-image-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %> <br></b>
                            Rs <%= listing.price.toLocaleString("en-PK") %> <br>
                            
                        </p>
                    </div>
                </div>
            </a>
    <% } %>
    </div>
 


    
</body>


